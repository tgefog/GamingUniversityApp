@model IEnumerable<GamingUniversityApp.Data.Models.Course>

<h2>All Courses</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Description</th>
            <th>Credits</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.Description</td>
                <td>@course.Credits</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Course</a>
