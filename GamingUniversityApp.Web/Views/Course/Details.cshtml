@using GamingUniversityApp.Web.ViewModels.Course;
@model CourseDetailsViewModel

<h2>@Model.CourseName</h2>

<img src="@Model.ImageUrl" alt="@Model.CourseName" class="course-image" />

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Credits:</strong> @Model.Credits</p>

<a asp-action="Index" class="btn btn-primary">Back to All Courses</a>
