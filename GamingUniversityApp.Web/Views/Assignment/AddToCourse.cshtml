@using GamingUniversityApp.Web.ViewModels.Assignment;
@model AddAssignmentToCourseViewModel

<h2>Add Assignment to Course</h2>

<form method="post">
    <div class="form-group">
        <label for="Id">Assignment Name:</label>
        <input type="text" class="form-control" id="Id" value="@Model.Name" readonly />
    </div>

    <div class="form-group">
        <label for="CourseId">Select Course:</label>
        <select class="form-control" id="CourseId" name="CourseId" required>
            <option value="">Select a Course</option>
            @foreach (var course in Model.Courses)
            {
                <option value="@course.Id">@course.CourseName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Assignment to Course</button>
</form>